{
  "package": {
    "productName": "Echoo",
    "version": "0.23.1"
  },
  "build": {
    "distDir": "../web-src/build",
    "devPath": "http://localhost:3001",
    "beforeDevCommand": "cd web-src && yarn start",
    "beforeBuildCommand": "cd web-src && yarn build",
    "withGlobalTauri": true
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "app.echoo.mac",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "zs.matrix62@gmail.com",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": [],
        "useBootstrapper": false
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.7",
        "useBootstrapper": false,
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": "./entitlements.plist"
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": [
          "$USER/*"
        ]
      }
    },
    "windows": [
      {
        "title": "Echoo",
        "minWidth": 800,
        "minHeight": 600,
        "maxHeight": 900,
        "maxWidth": 1440,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}